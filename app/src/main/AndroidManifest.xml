<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".utils.LearningApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearningVerbs"
        tools:targetApi="31">
        <activity
            android:name=".view.verd_detail.VerbDetailActivity"
            android:exported="false" />
        <activity
            android:name=".view.profile.UserDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".view.profile.GetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.profile.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.profile.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".view.home.HomeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.profile.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>